@model In_Mgmt.Models.Item

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Item</legend>

        @Html.HiddenFor(model => model.ItemID)

        <div class="editor-label">
            @Html.LabelFor(model => model.ItemCode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ItemCode)
            @Html.ValidationMessageFor(model => model.ItemCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ItemName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ItemName)
            @Html.ValidationMessageFor(model => model.ItemName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CUOMID, "ConsumptionUOM")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CUOMID", String.Empty)
            @Html.ValidationMessageFor(model => model.CUOMID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IUOMID, "InventoryUOM")
        </div>
        <div class="editor-field">
            @Html.DropDownList("IUOMID", String.Empty)
            @Html.ValidationMessageFor(model => model.IUOMID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SUOMID, "StoredUOMs")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SUOMID", String.Empty)
            @Html.ValidationMessageFor(model => model.SUOMID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DUOMID, "DisplayUOMs")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DUOMID", String.Empty)
            @Html.ValidationMessageFor(model => model.DUOMID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ContainerLocation)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ContainerLocation)
            @Html.ValidationMessageFor(model => model.ContainerLocation)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
